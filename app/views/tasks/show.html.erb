<%= link_to "Back", tasks_path %>
<%= link_to "Edit", edit_task_path(@task) %>
<%= link_to "Delete",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<h1>Task</h1>

<p>name: <%= @task.title %></p>
<p>description: <%= @task.details %></p>
<p>completed: <%= @task.completed %></p>
